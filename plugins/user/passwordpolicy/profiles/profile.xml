<?xml version="1.0" encoding="utf-8"?>

<form>
	<fields name="passwordpolicy">
		<fieldset name="passwordpolicy"
			label="PLG_USER_PASSWORDPOLICY_SLIDER_LABEL"
		>
			<field
				name="pwdLastSet"
				type="calendar"
				label="PLG_USER_PASSWORDPOLICY_PASSWORDLASTSET_LABEL"
				description="PLG_USER_PASSWORDPOLICY_PASSWORDLASTSET_DESC"
				class="readonly"
				readonly="true"
				translateformat="true"
				showtime="true"
				size="22"
				filter="server_utc"
			/>
			<field
				name="maximumPasswordAge"
				type="number"
				default="0"
				label="PLG_USER_PASSWORDPOLICY_MAXIMUMPASSWORDAGE_LABEL"
				description="PLG_USER_PASSWORDPOLICY_MAXIMUMPASSWORDAGE_DESC"
				filter="integer"
				min="0"
				max="180"
				step="1"
			/>
			<field
				name="expiryDate"
				type="calendar"
				label="PLG_USER_PASSWORDPOLICY_EXPIRYDATE_LABEL"
				description="PLG_USER_PASSWORDPOLICY_EXPIRYDATE_DESC"
				translateformat="true"
				showtime="true"
				size="22"
				filter="server_utc"
			/>
		</fieldset>
	</fields>
</form>