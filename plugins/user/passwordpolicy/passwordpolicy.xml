<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="user" method="upgrade">
  <name>plg_user_passwordpolicy</name>
  <author>Helios Ciancio</author>
  <creationDate>January 2018</creationDate>
  <copyright>(C) 2018 Helios Ciancio. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL v3</license>
  <authorEmail>info@eshiol.it</authorEmail>
  <authorUrl>www.eshiol.it</authorUrl>
  <version>3.8.1.1</version>
  <description>PLG_USER_PASSWORDPOLICY_XML_DESCRIPTION</description>
  <!-- <scriptfile>script.php</scriptfile> -->
  <updateservers>
	<server type="plugin" priority="2" name="Password Policy for User">https://www.eshiol.it/files/plg_user_passwordpolicy/plg_user_passwordpolicy.xml</server>
  </updateservers>
  <files>
	<filename plugin="passwordpolicy">passwordpolicy.php</filename>
	<folder>profiles</folder>
  </files>
  <languages folder="language">
	<language tag="en-GB">en-GB/en-GB.plg_user_passwordpolicy.ini</language>
	<language tag="en-GB">en-GB/en-GB.plg_user_passwordpolicy.sys.ini</language>
	<language tag="it-IT">it-IT/it-IT.plg_user_passwordpolicy.ini</language>
	<language tag="it-IT">it-IT/it-IT.plg_user_passwordpolicy.sys.ini</language>
  </languages>
  <config>
	<fields name="params">
	  <fieldset name="basic">
		  <field name="maximumPasswordAge" type="integer" default="0" label="PLG_USER_PASSWORDPOLICY_MAXIMUMPASSWORDAGE_LABEL" description="PLG_USER_PASSWORDPOLICY_MAXIMUMPASSWORDAGE_DESC" first="0" last="180" step="1" />
	  </fieldset>
	  <fieldset name="debug" label="PLG_USER_PASSWORDPOLICY_DEBUG_LABEL">
		<field name="debug" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_USER_PASSWORDPOLICY_DEBUG_SYSTEM_DESC" label="PLG_USER_PASSWORDPOLICY_DEBUG_SYSTEM_LABEL">
		  <option value="1">JYES</option>
		  <option value="0">JNO</option>
		</field>
		<field name="log" type="text" label="PLG_USER_PASSWORDPOLICY_DEBUG_FILENAME_LABEL" description="PLG_USER_PASSWORDPOLICY_DEBUG_FILENAME_DESC" default="eshiol.log.php" showon="debug:1"/>
		<field name="phpconsole" type="radio" class="btn-group btn-group-yesno" default="0" description="PLG_USER_PASSWORDPOLICY_DEBUG_PHPCONSOLE_DESC" label="PLG_USER_PASSWORDPOLICY_DEBUG_PHPCONSOLE_LABEL">
		  <option value="1">JYES</option>
		  <option value="0">JNO</option>
		</field>
	  </fieldset>
	</fields>
  </config>
</extension>
